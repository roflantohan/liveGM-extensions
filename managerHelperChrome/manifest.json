{
    "manifest_version": 3,
    "name": "mngSCHelper",
    "description": "Helper for LiveGM",
    "version": "1.0.0",
    "icons": {
        "256": "favicon.png"
    },
    "action": {
        "default_title": "Manager's monitoring helper", 
        "default_icon": "favicon.png", 
        "default_popup": "popup.html"
    },
    
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": [ "./js/content.js" ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "./js/background.js"
    },
    "permissions": ["activeTab", "scripting"]
}

